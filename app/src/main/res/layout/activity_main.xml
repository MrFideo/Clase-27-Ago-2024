<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            tools:ignore="MissingContraints">

            <Button
                android:id="@+id/button_click"
                android:layout_width="123dp"
                android:layout_height="80dp"
                android:onClick="handleButtonClick"
                android:text="Click Me"
                tools:ignore="MissingContraints"
                tools:layout_editor_absoluteX="169dp"
                tools:layout_editor_absoluteY="40dp"/>

            <Button
                android:id="@+id/button_long_click"
                android:layout_width="164dp"
                android:layout_height="84dp"
                android:text="Long Click Me"
                tools:ignore="MissingContraints"
                tools:layout_editor_absoluteX="151dp"
                tools:layout_editor_absoluteY="119dp"/>

            <EditText
                android:id="@+id/edit_text_focus"
                android:layout_width="166dp"
                android:layout_height="82dp"
                android:hint="Focus On Me"
                tools:ignore="MissingContraints"
                tools:layout_editor_absoluteX="169dp"
                tools:layout_editor_absoluteY="213dp"/>

            <EditText
                android:id="@+id/edit_text_key"
                android:layout_width="179dp"
                android:layout_height="77dp"
                android:hint="Press Any Key"
                tools:ignore="MissingContraints"
                tools:layout_editor_absoluteX="169dp"
                tools:layout_editor_absoluteY="308dp"/>

            <Button
                android:id="@+id/button_touch"
                android:layout_width="156dp"
                android:layout_height="97dp"
                android:text="Touch Me"
                tools:ignore="MissingContraints"
                tools:layout_editor_absoluteX="178dp"
                tools:layout_editor_absoluteY="411dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>